<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnStart"
        app:layout_constraintRight_toRightOf="@+id/btnStart"
        app:layout_constraintTop_toTopOf="@+id/btnStart" />
    <Button
        android:id="@+id/btnAlarmStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnEnd"
        app:layout_constraintRight_toRightOf="@+id/btnEnd"
        app:layout_constraintTop_toTopOf="@+id/btnEnd" />
    <Button
        android:id="@+id/btnAlarmStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnAlarmStart"
        app:layout_constraintRight_toRightOf="@+id/btnAlarmStart"
        app:layout_constraintTop_toTopOf="@+id/btnAlarmStart" />
</androidx.constraintlayout.widget.ConstraintLayout>